@model PMS_MVC.Models.Category;

@{
    ViewData["Title"] = "Category Details";
}
<!-- Details of category -->
<div class="container shadow-lg rounded bg-white justify-content-center align-items-center mt-5">
    <div class="mt-3">
        <a asp-action="list" asp-controller="Category" class="btn shadow  btn-outline-secondary border-info text-info px-3 mt-3 ">
            < Back
        </a>
    </div>
    <div class="row mb-4 mt-4">
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Name</h5>
                    <h3 class="card-text">@Model.Name</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Code</h5>
                    <h3 class="card-text">@Model.Code</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-12 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Description</h5>
                    <h3 class="card-text">@Model.Description</h3>
                </div>
            </div>
        </div>
    </div>
</div>