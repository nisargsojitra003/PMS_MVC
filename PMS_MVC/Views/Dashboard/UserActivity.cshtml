@{
    ViewData["Title"] = "Activity List";
}
<div id="ActivityList" class="container mt-3">
    <div class="row">
        <div class="d-flex justify-content-start mb-3">
            <a asp-action="index" asp-controller="dashboard" class="btn shadow btn-outline-secondary border-info text-info px-3">
                < Back
            </a>
        </div>
        <h4 class="text-info">
            My Activity
        </h4>
        <div class="col-md-6 mb-3">
            <div class="form-floating">
                <input class="form-control dark-mode2" type="text" placeholder="Activity" aria-label="Search" id="searchActivityTab" maxlength="25">
                <label for="searchActivityTab" class="ms-2">Search Activity</label>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="form-floating">
                <input class="form-control dark-mode2" type="text" placeholder="Time" aria-label="Search" id="searchCreatedAtTab" maxlength="25">
                <label for="searchCreatedAtTab" class="ms-2">Time</label>
            </div>
        </div>
        <div class="col-12 mb-3 d-flex justify-content-between">
            <button data-toggle="tooltip" data-placement="top" id="activityClear" title="Clear Search" class="btn btn-outline-danger">
                <i class="bi bi-backspace"></i>
            </button>
        </div>

        <div id="activityListdata" class="row">
        </div>
    </div>

</div>

<script>
    $(document).ready(function () {
        $('#activityListdata').load("/dashboard/userActivityShared");
        $('[data-toggle="tooltip"]').tooltip();
    });

    $(document).on('click', '#activityClear', function () {
        $('#searchActivityTab,#searchCreatedAtTab').val('');
        DisplayLoader();
        HideLoader();
        $('#activityListdata').load("/dashboard/userActivityShared");
    });
</script>