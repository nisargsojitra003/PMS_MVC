@model PMS_MVC.Models.EditProduct;
@{
    ViewData["Title"] = "Product Details";
}
@{
    string ImagePATH = Model.FileName;
    string ImageURL = "https://localhost:44390/UploadDocuments/" + Model.FileName;
}
<!-- Detail Product Page -->
<div class="container shadow-lg rounded bg-white justify-content-center align-items-center mt-5">
    <div class="mt-3">
        <a asp-action="list" asp-controller="Product" class="btn shadow  btn-outline-secondary border-info text-info px-3 mt-3">
            < Back
        </a>
    </div>
    <div class="row mb-4 mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Name</h5>
                    <h3 class="card-text">@Model.ProductName</h3>
                </div>
            </div>
        </div>
        @if (Model.FileName != null)
        {
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Image</h5>
                        <img src="@ImageURL" class="img-fluid" style="width: 200px; height:100px" />
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Price</h5>
                    <h3 class="card-text">₹@Model.Price/-</h3>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Category Tag</h5>
                    <h3 class="card-text">@Model.CategoryTag</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Category Name</h5>
                    <h3 class="card-text">@Model.CategoryName</h3>
                </div>
            </div>
        </div>

        <div class="col-md-12 mt-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-primary">Description</h5>
                    <h3 class="card-text">@Model.Description</h3>
                </div>
            </div>
        </div>
    </div>
</div>