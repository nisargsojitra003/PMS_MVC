@model PMS_MVC.Models.AddProduct
@{
    ViewData["Title"] = "Add Product";
}
<partial name="_Notification" />
<!-- Add Product Form -->
<div class="container d-flex justify-content-center align-items-center" style="min-height: 50vh;">
    <div class="shadow-lg rounded bg-white p-4 w-100" style="max-width: 600px;">
        <div class="addformTitle mt-3"><p><strong>Add Product</strong></p></div>
        <form asp-action="Add" asp-controller="Product" method="post" class="dark-mode2" id="addProductForm" enctype="multipart/form-data">
            <div class="row mb-3">
                <div class="col-12">
                    <div class="form-floating">
                        <input asp-for="@Model.ProductName" type="text" class="form-control" placeholder="Name">
                        <label asp-for="@Model.ProductName">Product Name</label>
                        <span asp-validation-for="@Model.ProductName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12">
                    <div class="form-floating">
                        <textarea style="height:8rem" asp-for="@Model.Description" type="text" class="form-control" placeholder=" "></textarea>
                        <label asp-for="@Model.Description">Product Description</label>
                        <span asp-validation-for="@Model.Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12">
                    <div class="form-floating">
                        <input asp-for="@Model.Price" type="number" pattern="/^-?\d+\.?\d*$/" onKeyPress="if(this.value.length==8) return false;" class="form-control" placeholder="Price" maxlength="8">
                        <label asp-for="@Model.Price">Product Price</label>
                        <span asp-validation-for="@Model.Price" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12">
                    <span class="me-2">Category Tag:</span>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="@Model.CategoryTag" id="exampleRadios1" value="Small" checked>
                        <label class="form-check-label" for="exampleRadios1">Small</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="@Model.CategoryTag" id="exampleRadios2" value="Medium">
                        <label class="form-check-label" for="exampleRadios2">Medium</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="@Model.CategoryTag" id="exampleRadios3" value="Large">
                        <label class="form-check-label" for="exampleRadios3">Large</label>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12">
                    <div class="form-floating">
                        <select asp-for="@Model.CategoryId" class="form-control" id="courseselect" aria-label="state">
                            <option hidden value="">Category</option>
                            @foreach (var category in Model.categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                        <label asp-for="@Model.CategoryId">Category</label>
                        <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-12">
                    <p>Product Image</p>
                    <div class="file-upload d-flex align-items-center">
                        <input type="file" class="form-control" asp-for="@Model.Fileupload" id="myFile" placeholder=" ">

                        <span asp-validation-for="@Model.Fileupload" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6 mb-3">
                    <button onclick="location.href='@Url.Action("list", "product")'" type="button" class="btn btn-info text-white w-100" data-bs-dismiss="modal">Cancel</button>
                </div>
                <div class="col-6 mb-3">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success text-white w-100">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />